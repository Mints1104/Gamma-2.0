<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#44000000">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#80000000"
        android:padding="8dp">

        <!-- Header with title and close button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <!-- Drag handle for the panel -->
            <ImageButton
                android:id="@+id/drag_handle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Drag handle"
                android:src="@drawable/ic_drag_handle" />

            <!-- Favorites title -->
            <TextView
                android:id="@+id/filters_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/drag_handle"
                android:layout_centerVertical="true"
                android:text="Filters"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Overflow menu button -->
            <ImageButton
                android:id="@+id/overflow_menu_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_toLeftOf="@id/close_filter_button"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="More options"
                android:src="@drawable/ic_more_vert" />

            <!-- Close button -->
            <ImageButton
                android:id="@+id/close_filter_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Close"
                android:src="@drawable/close_24px" />

        </RelativeLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="8dp" />

        <!-- Favorites list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/filters_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="300dp" />

    </LinearLayout>
</FrameLayout>