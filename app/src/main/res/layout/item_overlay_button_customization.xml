<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Drag Handle for reordering -->
    <ImageView
        android:id="@+id/drag_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_drag_handle_overlay"
        android:contentDescription="Drag to reorder"
        app:tint="?android:attr/textColorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Button Icon Preview -->
    <ImageView
        android:id="@+id/button_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:contentDescription="Button icon"
        app:tint="?android:attr/textColorPrimary"
        app:layout_constraintStart_toEndOf="@id/drag_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Button Name -->
    <TextView
        android:id="@+id/button_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/button_icon"
        app:layout_constraintEnd_toStartOf="@id/visibility_switch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Visibility Switch -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/visibility_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
